<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gao.dao.B_GzcdDao">

<insert id="AddB_Gzcd" parameterType="B_Gzcd">

insert into b_gzcd(gzcdmc) values(#{gzcdmc})

</insert>

<select id="getAllGzcds" resultType="B_Gzcd">

select * from b_gzcd

</select>

<delete id="DeleteGzcd" parameterType="int">

delete from b_gzcd where gzcdid={id}

</delete>

<select id="getGzcd" parameterType="int" resultType="B_Gzcd">

select * from b_gzcd where  gzcdid=#{gzcddid}

</select>

<update id="UpdateGzcd" parameterType="B_Gzcd">

update b_gzcd set gzcdmc=#{gzcdmc} where gzcdid=#{gzcdid}

</update>

</mapper>





